{
  "stack": "container",
  "buildpacks": [
    {
      "url": "https://github.com/diesdasdigital/heroku-google-application-credentials-buildpack"
    }
  ],
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_REGION": {
      "required": true,
      "description": "For the list of available regions see: https://docs.aws.amazon.com/general/latest/gr/rande.html",
      "value": "eu-central-1"
    },
    "BUCKET_NAME": {
      "required": true
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "required": true,
      "value": "google-application-credentials.json"
    },
    "GOOGLE_CREDENTIALS": {
      "required": true
    }
  },
 "addons": [
    "heroku-redis"
  ],
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  }
}