{
  "stack": "container",
  "buildpacks": [
    {
      "url": "https://github.com/diesdasdigital/heroku-google-application-credentials-buildpack"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://buildpack-registry.s3.amazonaws.com/buildpacks/heroku-community/awscli.tgz"
    }
  ],
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_REGION": {
      "required": true,
      "description": "For the list of available regions see: https://docs.aws.amazon.com/general/latest/gr/rande.html",
      "value": "eu-central-1"
    },
    "BUCKET_NAME": {
      "required": true
    },
    "GOOGLE_APPLICATION_CREDENTIALS": {
      "required": true,
      "value": "google-credentials.json"
    },
    "GOOGLE_CREDENTIALS": {
      "required": true
    },
    "LOG_LEVEL": {
      "required": true,
      "description": "For the list of available options see: https://github.com/pinojs/pino/blob/master/docs/api.md#loggerlevel-string-gettersetter",
      "value": "info"
    }
  },
  "addons": ["heroku-redis"],
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  }
}
